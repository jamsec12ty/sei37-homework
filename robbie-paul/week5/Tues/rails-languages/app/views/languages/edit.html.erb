<h2> Add New Language</h2>

<form action="<%= language_path( @language.id ) %>" method="post">

<label>
    Name: <input type="text" name="name" value="<%= @language.name %>">
</label>
<br>

<label>
    Family: <input type="text" name="family" value="<%= @language.family %>">
</label>
<br>

<label> 
    Difficulty: <input type="text" name="difficulty" value="<%= @language.difficulty %>">
</label>
<br>

<label>
    Countries: <input type="text" name="countries" value="<%= @language.countries %>">
</label>
<br>

<button>Update language</button>

</form>