
<div>
  <% @result.each_with_index do |result, index| %>
    <a href="/search/<%= result['id'] %>"><h3><%= index + 1 %>. <%= result['title'] %></h3></a>
    <h4>Popularity Rank: <%= result['popularity'] %></h4>
    <h4>Score: <%= result['vote_average'] %>/10</h4>
    <h4>Release Date: <%= result['release_date'] %></h4>
    <img src="https://image.tmdb.org/t/p/w500/<%="#{result['poster_path']}"%>" alt="Poster for <%="#{result['title']}"  %>">
    <hr/>
  <% end  %>
</div>
