<h2>Edit <%= @player.name %></h2>
<div class="divider"> </div>

<form action="/players/<%= @player.id %>" method="post">
  <label for="name">Name:</label><br>
  <input type="text" id="name" name="name" value="<%= @player.name %>"><br>
  <label for="nationality">Nationality:</label><br>
  <input type="text" id="nationality" name="nationality" value="<%= @player.nationality %>"><br>
  <label for="age">Age:</label><br>
  <input type="text" id="age" name="age" value="<%= @player.age %>"><br>
  <label for="position">Position:</label><br>
  <input type="text" id="position" name="position" value="<%= @player.position %>"><br>
  <label for="number">Number:</label><br>
  <input type="text" id="number" name="number" value="<%= @player.number %>"><br>

  <label for="team">Select Team:</label><br>
  <select name="team_id" id="team">
    <% @teams.each do |team| %>
      <option value="<%= team.id %>" <%= @player.team_id == team.id ? "selected" : "" %>><%= team.name %> </option>
    <% end %>
  </select><br>

<button>Update Player</button>
</form>

