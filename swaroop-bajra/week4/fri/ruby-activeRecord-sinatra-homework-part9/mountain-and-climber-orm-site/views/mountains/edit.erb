<h2>Edit Mountain: <%= @mountain.name %></h2>

<form action="/mountains/<%= @mountain.id %>" method="post">

  <label>
    Name:
    <input type="text" name="name" value="<%= @mountain.name %>">
  </label>
  <br>

  <label>
    Location:
    <input type="text" name="location" value="<%= @mountain.location %>">
  </label>

  <br>
  <label>Height:
    <input type="text" name="height" value="<%= @mountain.height %>">
  </label>
  <br>

  <label>
    Scalable:
    <input type="text" name="scalable" value="<%= @mountain.scalable ? 'Yes' : 'No' %>">
  </label>
  <br>

  <label>First Ascent:
    <input type="text" name="first_ascent" value="<%= @mountain.first_ascent %>">

  </label>
  <br>

  <label>Image:
    <input type="text" name="image_url" value="<%= @mountain.image_url %>">
  </label>
  <br>

  <input type="submit" value="Edit Mountain">
</form>
